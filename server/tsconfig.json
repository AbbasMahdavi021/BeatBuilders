{
   "compilerOptions": {
      "target": "es6",
      "rootDir": "./",
      "outDir": "./build",
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "commonjs"
   }
}
